@{
    ViewData["Title"] = "My Dashboard";
}

<div class="row">
    <div class="col-12">
        <div class="page-header d-flex align-items-center justify-content-between mb-4">
            <h1 class="mb-0">
                <i class="fas fa-tachometer-alt me-2 text-primary"></i>@ViewData["Title"]
            </h1>
            <span class="badge bg-success fs-6">
                <i class="fas fa-user me-1"></i>Customer
            </span>
        </div>
    </div>
</div>

<!-- Customer Stats -->
<div class="row mb-5">
    <div class="col-md-4 mb-4">
        <div class="card stats-card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title text-uppercase small opacity-75">My Orders</h6>
                        <h2 class="card-text display-6 fw-bold" id="myOrdersCount">-</h2>
                        <small class="opacity-75">Total orders placed</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-shopping-bag fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-primary-dark">
                <a asp-controller="Order" asp-action="Index" class="text-white text-decoration-none">
                    View Orders <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card stats-card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title text-uppercase small opacity-75">Cart Items</h6>
                        <h2 class="card-text display-6 fw-bold" id="cartItemsCount">-</h2>
                        <small class="opacity-75">Items in cart</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-shopping-cart fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-success-dark">
                <a asp-controller="Cart" asp-action="Index" class="text-white text-decoration-none">
                    View Cart <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card stats-card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title text-uppercase small opacity-75">Pending Orders</h6>
                        <h2 class="card-text display-6 fw-bold" id="pendingOrdersCount">-</h2>
                        <small class="opacity-75">Awaiting processing</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-clock fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-info-dark">
                <a asp-controller="Order" asp-action="Index" class="text-white text-decoration-none">
                    Track Orders <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-5">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="text-primary">
                <i class="fas fa-bolt me-2"></i>Quick Actions
            </h3>
        </div>
        <div class="row">
            <div class="col-xl-3 col-md-6 mb-3">
                <a asp-controller="Home" asp-action="Index" class="card action-card h-100 text-decoration-none">
                    <div class="card-body text-center">
                        <i class="fas fa-store fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Shop Products</h5>
                        <p class="card-text text-muted small">Browse our catalog</p>
                    </div>
                </a>
            </div>
            <div class="col-xl-3 col-md-6 mb-3">
                <a asp-controller="Cart" asp-action="Index" class="card action-card h-100 text-decoration-none">
                    <div class="card-body text-center">
                        <i class="fas fa-shopping-cart fa-3x text-success mb-3"></i>
                        <h5 class="card-title">My Cart</h5>
                        <p class="card-text text-muted small">View cart items</p>
                    </div>
                </a>
            </div>
            <div class="col-xl-3 col-md-6 mb-3">
                <a asp-controller="Order" asp-action="Index" class="card action-card h-100 text-decoration-none">
                    <div class="card-body text-center">
                        <i class="fas fa-list-alt fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">My Orders</h5>
                        <p class="card-text text-muted small">Order history</p>
                    </div>
                </a>
            </div>
            <div class="col-xl-3 col-md-6 mb-3">
                <a asp-controller="Home" asp-action="Contact" class="card action-card h-100 text-decoration-none">
                    <div class="card-body text-center">
                        <i class="fas fa-headset fa-3x text-info mb-3"></i>
                        <h5 class="card-title">Support</h5>
                        <p class="card-text text-muted small">Get help</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Orders & Featured Products -->
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-history me-2"></i>My Recent Orders
                </h5>
            </div>
            <div class="card-body">
                <div id="myRecentOrders">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Loading your orders...</p>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light text-end">
                <a asp-controller="Order" asp-action="Index" class="btn btn-outline-primary btn-sm">
                    View All Orders <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-star text-warning me-2"></i>Recommended For You
                </h5>
            </div>
            <div class="card-body">
                <div id="recommendedProducts">
                    <div class="text-center py-4">
                        <div class="spinner-border text-warning" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2 text-muted">Loading recommendations...</p>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light text-end">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-warning btn-sm">
                    Browse All <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .stats-card {
            border: none;
            border-radius: 1rem;
            transition: transform 0.3s ease;
        }

            .stats-card:hover {
                transform: translateY(-5px);
            }

        .bg-primary-dark {
            background-color: rgba(0, 0, 0, 0.1) !important;
        }

        .bg-success-dark {
            background-color: rgba(0, 0, 0, 0.1) !important;
        }

        .bg-info-dark {
            background-color: rgba(0, 0, 0, 0.1) !important;
        }

        .action-card {
            border: none;
            border-radius: 0.75rem;
            transition: all 0.3s ease;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }

            .action-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
            }

        .page-header {
            border-bottom: 2px solid var(--primary-color);
            padding-bottom: 1rem;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadCustomerDashboardData();
            updateCartCount();
        });

        async function loadCustomerDashboardData() {
            try {
                // Simulate loading data
                setTimeout(() => {
                    document.getElementById('myOrdersCount').textContent = '8';
                    document.getElementById('cartItemsCount').textContent = '3';
                    document.getElementById('pendingOrdersCount').textContent = '2';

                    // Load recent orders
                    document.getElementById('myRecentOrders').innerHTML = `
                        <div class="list-group list-group-flush">
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">ORD-001234</h6>
                                    <small class="text-muted">Wireless Headphones • R1,299.00</small>
                                    <br>
                                    <small class="text-muted">Ordered: ${new Date().toLocaleDateString()}</small>
                                </div>
                                <span class="badge bg-warning">Processing</span>
                            </div>
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">ORD-001233</h6>
                                    <small class="text-muted">Smart Watch • R2,499.00</small>
                                    <br>
                                    <small class="text-muted">Ordered: ${new Date(Date.now() - 2 * 24 * 60 * 60 * 1000).toLocaleDateString()}</small>
                                </div>
                                <span class="badge bg-success">Delivered</span>
                            </div>
                        </div>
                    `;

                    // Load recommended products
                    document.getElementById('recommendedProducts').innerHTML = `
                        <div class="list-group list-group-flush">
                            <div class="list-group-item">
                                <div class="d-flex align-items-center">
                                    <img src="https://via.placeholder.com/50" class="rounded me-3" alt="Product">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">Bluetooth Speaker</h6>
                                        <small class="text-muted">R599.00</small>
                                    </div>
                                    <button class="btn btn-primary btn-sm" onclick="addToCart('prod-123')">
                                        <i class="fas fa-cart-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="list-group-item">
                                <div class="d-flex align-items-center">
                                    <img src="https://via.placeholder.com/50" class="rounded me-3" alt="Product">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">Phone Case</h6>
                                        <small class="text-muted">R199.00</small>
                                    </div>
                                    <button class="btn btn-primary btn-sm" onclick="addToCart('prod-124')">
                                        <i class="fas fa-cart-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    `;
                }, 1000);
            } catch (error) {
                console.error('Error loading customer dashboard data:', error);
            }
        }

        function updateCartCount() {
            // This would typically fetch the actual cart count from your API
            const cartCount = 3; // Example count
            const cartBadge = document.getElementById('cartCount');
            if (cartBadge) {
                cartBadge.textContent = cartCount;
            }
        }

        async function addToCart(productId) {
            try {
                const response = await fetch('@Url.Action("AddToCart", "Cart")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ productId: productId, quantity: 1 })
                });

                const result = await response.json();
                if (result.success) {
                    alert('Product added to cart!');
                    updateCartCount();
                } else {
                    alert(result.message);
                }
            } catch (error) {
                console.error('Error adding to cart:', error);
                alert('Error adding product to cart.');
            }
        }
    </script>
}